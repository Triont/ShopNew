@using NewShopApp.Models
@using NewShopApp.ModelView
@model List<Order>
@{
}
<div>
    
<div class ="table">
<div align="center">
    @if(Model!=null)
    {
         <table class="table table-striped">
              <thead>
    <tr>
    
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Second Name</th>
       <th scope="col">Phone</th>
        <th scope="col">Email</th>
        <th scope="col">TotalPrice</th>
        <th scope="col">Status</th>
        <th scope="col"> create date time </th>
        <th scope="col">Action</th>
  
    </tr>
  </thead>
        
        @foreach(var i in Model)
        {
            
          
               <tr>
                   
                   <td> @i.Id</td>
                   <td>@i.Name</td>
                   <td>@i.SecondName</td>
                   <td>@i.Phone</td>
                   <td>@i.Email</td>
                   <td>@i.TotalPrice</td>
                   <td>@i.Status</td>
                   <td>@i.CreateDateTime</td>
                   <td>
                       @Html.ActionLink("Confirm", "OrderConfirm", "Admin", new {id=i.Id})
                       @Html.ActionLink("Remove", "RemoveOrder", "Admin", new {id=i.Id})
                     

                   </td>
             </tr>
      
        }
           </table>
    }
    </div>
</div>
