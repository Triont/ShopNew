@using NewShopApp.Models;
@using NewShopApp.ModelView;
@model List<Product>
@{
}
<html>
    <body>
        
<div class ="table">
<div align="center">
    @if(Model!=null)
    {
         <table class="table table-striped">
              <thead>
    <tr>
    
      <th scope="col">Id</th>
      <th scope="col">Name</th>
       <th scope="col">Price</th>
        <th scope="col">Count</th>
        <th scope="col">Image</th>
  
    </tr>
  </thead>
        
        @foreach(var i in Model)
        {
          
               <tr>
                   
                   <td> @i.Name</td>
                   <td>@i.Price</td>
                 
                      @if(@i.Quantity==0)
                      {
                         <td>
                         Not available
                          
                       </td>   
                      }
                      else
                      {
                       <td>
                           @i.Quantity
                       </td>
                            }

                        <td>
                   @*   <img src="upload/@i.Key.Image" />*@
                    <img class="img" src="/uploads/@Url.Content(i.Image)" height="64" width="64" />                    
                      </td>
                      <td>
                          <form asp-controller="Item" asp-action="AddToCart">
                               <input type="hidden" name="ProductId" value="@i.Id" />
                              <input type="submit" value="Buy" />
                          </form>
                          @* <td>@Html.ActionLink("Buy", "AddToCart","Item", new {id=@i.Id})</td>*@
                      </td>

                
               </tr>

           
                
        }
           </table>
    }
    </div>
       @* <img src="@Url.Content($"/upload/{@Model.First().Key.Image}")"/>*@
         @* <img src="~/upload/")"/>*@
       @*   <img src="@Url.Content(Model.Last().Key.Image)" />*@
       
</div>

    </body>
</html>
