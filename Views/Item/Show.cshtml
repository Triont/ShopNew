@using NewShopApp.Models;
@using NewShopApp.ModelView;
@using System.Globalization;
@model NewShopApp.Models.Product;
@{
}
<style>
    .img_div
    {

        float:left;
        width: 256px;
    height: 256px;
      margin-right: 65px;
    }
      .my_text
            {
                font-family:    Arial, Helvetica, sans-serif;
                font-size:      20px;
                font-weight:    italic;
            }

</style>
<div>

<div class="img_div">
             <img src="/uploads/@Url.Content(Model.Image)" height="256" width="256" />
         </div>
    <div class="my_text">         
         @Model.Name
         <br />
         <label>Price</label>
          
             @Model.Price.ToString("C", CultureInfo.CurrentCulture)
             <br />
             @if(Model.Quantity>0)
             {
                    <form asp-controller="Item" asp-action="AddToCart">
                               <input type="hidden" name="ProductId" value="@Model.Id" />
                              <input type="submit" value="Buy" />
                          </form>
             }
             else
             {
                  <p>
                      Sorry, this item is not available now
                  </p>
             }
             <br />
              Count is:  @Model.Quantity
             <br />
             <p>Desription</p>
             <br />
             @Model.Description
             <br />
            </div>


</div>
