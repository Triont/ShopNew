@using NewShopApp.ModelView;
@using NewShopApp.Models;
@model NewShopApp.ModelView.CreateItem;

@{
}
<form asp-controller="Home" asp-action="CreateItem" method="post"enctype="multipart/form-data">
    <label asp-for=Name></label>
    <input type="text" asp-for=Name />
    <label asp-for=Price></label>
    <input type="number" step=".01" max="99999.99" asp-for="Price" />
    <label asp-for=Description></label>
    <input type="text"  asp-for=Description />
    <label>Upload image</label>
    <input type="file" asp-for="Image" />
    <input type="submit" />
    
</form>  
